include <function> property     // arguments: name, content
include <function> margin       // arguments: direction, margin
include <function> style_class  // arguments: name

def class_name: "YGOCollectionList"
def parent_class: "GtkBox"

interface { template {
    class: "$(class_name)"
    parent: "$(parent_class)"
    property("vexpand" "true")
    property("spacing" "6")
    margin("start" "6")
    margin("end" "6")
    margin("top" "6")
    margin("bottom" "6")
    child { object {
        class: "GtkLabel"
        property("label" "Progressive Collections")
        style { style_class("heading") }
        property("halign" "start")
    }}
    child { object {
        class: "GtkBox"
        property("orientation" "horizontal")
        property("spacing" "6")
        child { object {
            class: "GtkSearchEntry"
            id: "search_bar"
            property("hexpand" "true")
        }}
        child { object {
            class: "GtkButton"
            id: "add_collection_button"
            property("icon-name" "list-add")
            style { style_class("circular") }
        }}
    }}
    child { object {
        class: "GtkListBox"
        id: "list_box"
    }}
}}
